liczba1 = 0
liczba2 = 0
dzielniki_liczby1 = []
dzielniki_liczby2 = []
NWD = []

def resetliczb():
    liczba1 = 0
    liczba2 = 0
    dzielniki_liczby1 = []
    dzielniki_liczby2 = []
    NWD = []

def consoleclear():
    import os
    os.system('cls||clear')

def inputliczb():
    print('Podaj 1sza liczbe')
    liczba1 = int(input()) #ta liczba1 nie jest ta sama co u gory
    print('Podaj 2ga liczbe')
    liczba2 = int(input()) #+1

def NWDf():
    for i in range(1, liczba1 + 1):
        if liczba1 % i == 0:
            dzielniki_liczby1.append(i)

    for i in range(1, liczba2 + 1):
        if liczba2 % i == 0:
            dzielniki_liczby2.append(i)

    for i in range(len(dzielniki_liczby1)):
        for j in range(len(dzielniki_liczby2)):
            if dzielniki_liczby1[i] == dzielniki_liczby2[j]:
                NWD.append(dzielniki_liczby1[i])

    NWD = max(NWD)

while True:
    print("""
Menu:
[1] NWD dwóch liczb
[2] NWW dwóch liczb
[3] Zakończ działanie programu
    """)
    menu_switch = input()

    consoleclear()

    if menu_switch == '1':
        resetliczb()

        inputliczb()

        if liczba1 == liczba2:
            NWW = liczba1
            print('Podałeś tą samą liczbę dwa razy, czyli NWW to: ' + str(NWW))
        elif liczba1 % liczba2 == 0:
            NWW = liczba1
            print('NWW to: ' + str(NWW))
        elif liczba2 % liczba1 == 0:
            NWW = liczba2
            print('NWW to: ' + str(NWW))
        else:
            NWDf()
            NWW = (liczba1 * liczba2) / NWD
            print('NWW to: ' + str(int(NWW)))


    elif menu_switch == '2':
        inputliczb()
        NWDf()
        print('NWD liczb ' + str(liczba1))

    else:
        break
